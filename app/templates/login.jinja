{% extends "base.jinja" %}

{% block title %}Admin přihlášení{% endblock %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="mb-4">Admin přihlášení</h2>
        <form method="POST">
            {{ form.hidden_tag() }}
            <div class="mb-3">
                {{ form.password.label(class="form-label") }}
                {{ form.password(class="form-control") }}
            </div>
            <div class="mb-3">
                {{ form.submit(class="btn btn-primary") }}
                <a href="{{ url_for('main.index') }}" class="btn btn-secondary">Zrušit</a>
            </div>
        </form>
    </div>
</div>
{% endblock %}